<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_20231213.Pages.MediaPage"
             Title="Multimedia"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit">
    <VerticalStackLayout>
        <toolkit:MediaElement x:Name="video" WidthRequest="450" HeightRequest="350" 
                              Source="embed://ForBiggerBlazes.mp4"
                              Aspect="Fill"/>
        <Button x:Name="btn" Text="Play/Pause" Clicked="OnBotonClic" HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>