<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="_20231213.Pages.TrazosPage"
             Title="Trazos"
             xmlns:ctool="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui">
    <VerticalStackLayout>
        <ctool:DrawingView x:Name="lienzo"
                           BackgroundColor="LightGrey"
                           WidthRequest="300"
                           HeightRequest="300"
                           HorizontalOptions="Center"
                           IsMultiLineModeEnabled="True"
                           LineColor="Blue"
                           LineWidth="15"
                           DrawingLineCompleted="OnLineaDibujada"/>
        <Image x:Name="imagen" HeightRequest="200" HorizontalOptions="Center"/>
        <Button Text=""/>
    </VerticalStackLayout>
</ContentPage>